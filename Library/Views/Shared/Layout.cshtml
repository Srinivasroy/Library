<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Library Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr.js"></script>
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@

    <style>
        body {
           
            background-image: url("https://ak.picdn.net/shutterstock/videos/1058406148/thumb/8.jpg");
            background-repeat: no-repeat;
            background-size: 100% 170%;
        }
        .badge1 {
            color: red !important;
            background-color: none !important;
        }
             
              
        
    </style>
</head>
<body>


    <div class="navbar navbar-fixed-top navbar-fnt  navbar-backgrnd"  style="background-color:lightblue; color :black">
        <div class="container-fluid">
            <div class="navbar-header">

                @Html.ActionLink("Library Management System", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="float:right;">
                <ul class="nav navbar-nav">
                    <li>  @Html.ActionLink("Login", "Login", "Home")</li>
                    <li>  @Html.ActionLink("Register", "Register", "Home")</li>

                </ul>
            </div>
        </div>
    </div>



        <div class="container body-content">
            @RenderBody()
            <div>

           
               
                <footer style="position:absolute; bottom:0px; height:30px; left:50px; right:100px; float:left; ">
                    <p> Created by Srinivas & Shwetha </p>
                </footer>
            </div>
        </div>

        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
        <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>