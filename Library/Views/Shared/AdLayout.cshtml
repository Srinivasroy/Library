<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Library Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr.js"></script>
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@

    <style>
        body {
            background-image: url("https://unblast.com/wp-content/uploads/2020/03/Illustrator-Vector-Illustration-1-1536x1106.jpg");
            background-repeat: no-repeat;
            background-size: 100% 490%;
        }
    </style>
</head>
<body>

    <div class="navbar navbar-fixed-top navbar-light" style="background-color:lightgrey">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library Management System", "Welcome", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="float:right;">
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("Books List", "Index", "books1")</li>
                    <li>  @Html.ActionLink("Enter New Book", "Create", "books1")</li>
                    <li>  @Html.ActionLink("Books Record", "AdminIndex", "IssuedBooks")</li>
                    <li>  @Html.ActionLink("Logout", "Logout", "Home")</li>

                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <div>



            <footer style="position:absolute; bottom:0px; height:50px; left:550px; right:100px; overflow:auto; color:dimgray; ">
                <p> Created by Srinivas & Shwetha </p>
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>