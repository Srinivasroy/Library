@model IEnumerable<Library.Models.book>


@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>Books List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.ActionLink("Details", "UserDetails", new { id = item.SNO }) |
                @Html.ActionLink("Add To Cart", "Online_Cart", new { id = item.SNO })

            </td>
        </tr>
    }

</table>

