@model IEnumerable<Library.Models.Online_Books_Record>

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";

}

<h2 style="color:red">Online Cart</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author_Name_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Issued_ON)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_Name_)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issued_ON)
            </td>

            <td>


                @Html.ActionLink("Delete", "Delete", new { id = item.SNO })
            </td>
        </tr>
    }

</table>
<input type="button" class="btn btn-primary" style="background-color:lightblue; float:left; color:black" value="Back to list" onclick="location.href='@Url.Action("Online_Books","books1")'" />
<input type="button"  class="btn btn-primary" style="background-color:lightblue; float:right; color:black" value="Place Order" onclick="location.href='@Url.Action("Index","Online_Book_Orders")'" />